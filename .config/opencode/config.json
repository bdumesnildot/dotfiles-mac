{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "github",
  "model": "google/gemini-2.5-flash",
  "agent": {
    "plan": {
      "model": "google/gemini-3-pro-preview"
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4.5"
    }
  },
  "mcp": {
    "linear": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/sse"]
    },
    "context7": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"]
    },
    "figma": {
      "enabled": false,
      "type": "remote",
      "url": "http://127.0.0.1:3845/sse"
    },
    "pragma-dx": {
      "enabled": false,
      "type": "remote",
      "url": "http://127.0.0.1:8008/v1/mcp"
    },
    "n8n-popina-mcp": {
      "enabled": false,
      "type": "remote",
      "url": "{file:./.secrets/N8N_POPINA_MCP_SERVER_URL}",
      "headers": {
        "Authorization": "{file:./.secrets/N8N_POPINA_MCP_BEARER_TOKEN}"
      }
    }
  },
  "keybinds": {
    "leader": "ctrl+l"
  }
}
