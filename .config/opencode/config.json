{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "system",
  "model": "github-copilot/claude-sonnet-4",
  "agent": {
    "plan": {
      "model": "github-copilot/claude-sonnet-4"
    },
    "build": {
      "model": "github-copilot/claude-sonnet-4"
    }
  },
  "mcp": {
    "linear": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/sse"]
    },
    "context7": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"]
    },
    "figma": {
      "enabled": false,
      "type": "remote",
      "url": "http://127.0.0.1:3845/sse"
    }
  },
  "keybinds": {
    "leader": "ctrl+l"
  }
}
